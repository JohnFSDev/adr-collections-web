---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
import { fade } from "astro:transitions";
---

<Layout title="ADR Collections">
  <Header />

  <main>
    <section
      class="bg-gradient-to-b from-[#1e3951] to-[#16334a] text-white py-20 md:py-32 transition-opacity duration-1000 ease-in"
    >
      <div
        class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-8 items-center"
      >
        <!-- Columna 1: Información de bienvenida -->
        <div class="text-center md:text-left animate-fadeIn">
          <img
            src="images/logo.png"
            alt="ADR Collections Logo"
            class="mx-auto mb-8 w-48 md:w-64 md:mx-0 transition-transform duration-500 hover:scale-105"
          />
          <h1
            class="text-4xl md:text-6xl font-bold mb-4 tracking-tight leading-tight"
          >
            Bienvenido a ADR Collections
          </h1>
          <h2 class="text-2xl md:text-3xl mb-6 font-light leading-relaxed">
            Elevando tu hogar con estilo y calidad
          </h2>
          <p
            class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto md:mx-0 leading-relaxed opacity-90"
          >
            Descubre nuestra exclusiva colección de productos de alta calidad
            para transformar tu espacio en un refugio de confort y elegancia.
          </p>
          <div
            class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4 mt-6"
          >
            <a
              href="#productos"
              class="bg-transparent border-2 border-white text-white py-3 px-8 rounded-full text-lg font-semibold hover:bg-white hover:text-[#1e3951] transition-transform duration-300 inline-block hover:scale-105"
            >
              Ver Productos
            </a>
            <a
              href="#contacto"
              class="bg-transparent border-2 border-white text-white py-3 px-8 rounded-full text-lg font-semibold hover:bg-white hover:text-[#1e3951] transition-transform duration-300 inline-block hover:scale-105"
            >
              Contáctanos
            </a>
          </div>
        </div>

        <!-- Columna 2: Video de YouTube -->
        <div class="flex flex-col items-center md:items-center">
          <h3 class="text-2xl font-semibold mb-4 text-center">
            ¡Descubre todo lo que tenemos disponible para ti!
          </h3>
          <div
            class="relative w-full max-w-3xl md:max-w-4xl rounded-lg overflow-hidden shadow-lg border border-white/20"
            style="padding-top: 56.25%;"
          >
            <iframe
              src="https://www.youtube.com/embed/LP-hiOHVbKE"
              class="absolute top-0 left-0 w-full h-full rounded-lg"
              style="border:none;overflow:hidden"
              allowfullscreen
              allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <ProductShowcase />
    <section id="visit" class="py-16 bg-[#1a3346]">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
          <!-- Columna izquierda: Información de la tienda -->
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              Visítanos en nuestra tienda
            </h2>

            <!-- Ubicación -->
            <p class="text-xl mb-2 flex items-center space-x-2">
              <span class="mr-2 flex-shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 384 512"
                  class="h-6 w-6 text-white"
                >
                  <path
                    d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"
                    fill="#ffffff"
                    ></path>
                </svg>
              </span>
              Puerto Tampico #64, Ciudad de México, México
            </p>

            <!-- Horario -->
            <p class="text-xl mb-4 flex items-center space-x-2">
              <span class="mr-2 flex-shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 448 512"
                  class="h-6 w-6"
                >
                  <path
                    fill="#ffffff"
                    d="M152 24c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40L64 64C28.7 64 0 92.7 0 128l0 16 0 48L0 448c0 35.3 28.7 64 64 64l320 0c35.3 0 64-28.7 64-64l0-256 0-48 0-16c0-35.3-28.7-64-64-64l-40 0 0-40c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40L152 64l0-40zM48 192l352 0 0 256c0 8.8-7.2 16-16 16L64 464c-8.8 0-16-7.2-16-16l0-256z"
                  ></path>
                </svg>
              </span>
              Lunes a Viernes, 10:00 AM - 8:00 PM
            </p>

            <!-- Teléfono -->
            <p class="text-xl mb-8 flex items-center space-x-2">
              <span class="mr-2 flex-shrink-0">
                <!-- Phone Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 512 512"
                  class="h-6 w-6"
                >
                  <path
                    fill="#ffffff"
                    d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
                  ></path>
                </svg>
              </span>
              Teléfono: +52 55 6099 6032
            </p>
          </div>

          <!-- Columna derecha: Mapa -->
          <div
            class="relative w-full h-96 rounded-lg overflow-hidden shadow-lg border-none"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3763.387203446149!2d-99.07114568468239!3d19.497267886848215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1fba9b5ae7a25%3A0x75e23e6eb2ef6d30!2sPto.%20Tampico%2064%2C%20Casas%20Alem%C3%A1n%2C%20Gustavo%20A.%20Madero%2C%2007580%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX%2C%20M%C3%A9xico!5e0!3m2!1ses!2sdo!4v1695481087929!5m2!1ses!2sdo"
              class="absolute top-0 left-0 w-full h-full border-none"
              allowfullscreen=""
              aria-hidden="false"
              tabindex="0"
            >
            </iframe>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
