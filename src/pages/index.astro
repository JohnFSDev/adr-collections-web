---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductShowcase from '../components/ProductShowcase.astro';
---

<Layout title="ADR Collections">
  <Header />
  
  <main>
    <section class="bg-[#1e3951] text-white py-20 md:py-32">
      <div class="container mx-auto px-4 text-center">
        <img src="/images/logo.png" alt="ADR Collections Logo" class="mx-auto mb-8 w-48 md:w-64">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Bienvenido a ADR Collections</h1>
        <p class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto">Descubre nuestra exclusiva colección de productos de alta calidad para tu hogar</p>
        <a href="#productos" class="bg-white text-[#1e3951] py-3 px-8 rounded-full text-lg font-semibold hover:bg-gray-200 transition duration-300 inline-block">
          Ver Productos
        </a>
      </div>
    </section>

    <ProductShowcase />

    <section class="bg-[#15293d] text-white py-16 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Visítanos en nuestra tienda</h2>
        <p class="text-xl mb-2">Puerto tampico #64, Ciudad de México, México</p>
        <p class="text-xl mb-8">Lunes a Viernes, 10:00 AM - 8:00 PM</p>
        <a href="/contacto" class="bg-[#1e3951] text-white py-3 px-8 rounded-full text-lg font-semibold hover:bg-[#2c5474] transition duration-300 inline-block">
          Contáctanos
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>