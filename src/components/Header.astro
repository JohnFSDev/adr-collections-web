<header class="bg-[#15293d] p-4 sticky top-0 z-50 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <!-- Logo alineado a la izquierda -->
    <a href="/">
      <img src="images/logo.webp" alt="ADR Collections Logo" class="h-12 md:h-16 object-contain" />
    </a>

    <!-- Botón de menú, visible solo en móviles -->
    <button id="nav-toggle" class="text-white focus:outline-none md:hidden" aria-label="Toggle navigation" aria-expanded="false">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

    <!-- Menú de navegación, desplegable en móviles y horizontal en pantallas grandes -->
    <ul id="nav-menu" class="max-h-0 overflow-hidden opacity-0 transition-all duration-300 ease-in-out md:flex md:space-x-8 absolute md:relative top-full left-0 w-full bg-[#15293d] md:bg-transparent md:w-auto flex-col md:flex-row md:opacity-100 md:max-h-full md:overflow-visible">
      <li><a href="/" class="block py-2 px-4 hover:text-gray-300">Inicio</a></li>
      <li><a href="/contacto" class="block py-2 px-4 hover:text-gray-300">Contactanos</a></li>
      <li><a href="/nosotros" class="block py-2 px-4 hover:text-gray-300">Sobre Nosotros</a></li>
    </ul>
  </nav>
</header>

<!-- Script para alternar la visibilidad del menú en dispositivos móviles -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const navToggle = document.getElementById('nav-toggle');
  const navMenu = document.getElementById('nav-menu');
  
  if (navToggle && navMenu) {
    navToggle.addEventListener('click', () => {
      const isExpanded = navToggle.getAttribute('aria-expanded') === 'true';

      // Animación de apertura/cierre
      if (isExpanded) {
        navMenu.style.maxHeight = '0px';  // Altura cero para esconder
        navMenu.style.opacity = '0';      // Opacidad cero para esconder
      } else {
        navMenu.style.maxHeight = navMenu.scrollHeight + 'px';  // Altura del contenido
        navMenu.style.opacity = '1';      // Totalmente visible
      }

      // Cambiar el valor de aria-expanded
      navToggle.setAttribute('aria-expanded', String(!isExpanded));
    });
  }
});
</script>
